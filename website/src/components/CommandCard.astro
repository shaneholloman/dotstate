---
interface Props {
    command: string;
    description: string;
    options?: string;
    example?: string;
    note?: string;
}

const { command, description, options, example, note } = Astro.props;
---

<div class="command-card">
    <div class="command-header">
        <code class="command-name">{command}</code>
        <button class="copy-btn" data-copy={command.split(' ')[0] + ' ' + command.split(' ')[1]} aria-label="Copy command">ðŸ“‹</button>
    </div>
    <p class="command-desc">{description}</p>
    {options && (
        <div class="command-options">
            <Fragment set:html={options} />
        </div>
    )}
    {example && (
        <div class="command-example">
            <strong>Example:</strong> <code>{example}</code>
        </div>
    )}
    {note && (
        <p class="command-note">{note}</p>
    )}
</div>

<style>
    .command-card {
        background-color: rgba(0, 212, 255, 0.05);
        border: 1px solid var(--border-color);
        padding: 20px;
        margin: 15px 0;
        border-radius: 4px;
        position: relative;
        width: 100%;
        box-sizing: border-box;
    }

    .command-header {
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        margin-bottom: 10px;
        gap: 15px;
        position: relative;
    }

    .command-name {
        font-size: 1.1rem;
        color: var(--text-green);
        background: none;
        padding: 0;
        flex: 1;
        word-break: break-word;
    }

    .command-header .copy-btn {
        position: relative;
        top: auto;
        right: auto;
        flex-shrink: 0;
        background: rgba(0, 212, 255, 0.2);
        border: 1px solid var(--border-color);
        color: var(--accent-cyan);
        padding: 5px 10px;
        cursor: pointer;
        font-size: 0.9rem;
        transition: all 0.2s;
        border-radius: 3px;
    }

    .command-header .copy-btn:hover {
        background: rgba(0, 212, 255, 0.3);
        transform: scale(1.05);
    }

    .command-desc {
        color: var(--text-secondary);
        margin-bottom: 10px;
    }

    .command-options {
        margin-top: 10px;
        padding-top: 10px;
        border-top: 1px solid rgba(0, 212, 255, 0.3);
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    .command-example {
        margin-top: 10px;
        padding-top: 10px;
        border-top: 1px solid rgba(0, 212, 255, 0.3);
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    .command-example strong {
        color: var(--accent-cyan);
    }

    .command-note {
        margin-top: 10px;
        padding-top: 10px;
        border-top: 1px solid rgba(0, 212, 255, 0.3);
        color: var(--text-secondary);
        font-size: 0.9rem;
        font-style: italic;
    }
</style>
