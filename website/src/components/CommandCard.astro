---
interface Props {
    command: string;
    description: string;
    options?: string;
    example?: string;
    note?: string;
}

const { command, description, options, example, note } = Astro.props;
---

<div class="command-card">
    <div class="command-header">
        <span class="prompt">$</span>
        <code class="command-name">{command}</code>
        <button class="copy-btn" data-copy={command.split(' ')[0] + ' ' + command.split(' ')[1]} aria-label="Copy command">[cp]</button>
    </div>
    <p class="command-desc">{description}</p>
    {options && (
        <div class="command-options">
            <span class="options-label">[opts]</span>
            <Fragment set:html={options} />
        </div>
    )}
    {example && (
        <div class="command-example">
            <span class="example-label">[eg]</span> <code>{example}</code>
        </div>
    )}
    {note && (
        <p class="command-note">[i] {note}</p>
    )}
</div>

<style>
    .command-card {
        background-color: var(--bg-secondary);
        border: 1px solid var(--border-dim);
        margin: 15px 0;
        position: relative;
        width: 100%;
        box-sizing: border-box;
    }

    .command-header {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px 15px;
        background: linear-gradient(180deg, var(--bg-tertiary) 0%, var(--bg-secondary) 100%);
        border-bottom: 1px solid var(--border-dim);
    }

    .prompt {
        color: var(--accent-cyan);
        font-weight: bold;
        font-size: 1rem;
    }

    .command-name {
        font-size: 1rem;
        color: var(--accent-green);
        background: none;
        padding: 0;
        flex: 1;
        word-break: break-word;
        border: none;
    }

    .command-header .copy-btn {
        flex-shrink: 0;
        background: transparent;
        border: 1px solid var(--border-dim);
        color: var(--text-secondary);
        padding: 4px 10px;
        cursor: pointer;
        font-size: 0.75rem;
        font-family: var(--font-mono);
        transition: all 0.15s ease;
        line-height: 1;
    }

    .command-header .copy-btn:hover {
        background: rgba(0, 212, 255, 0.1);
        border-color: var(--accent-cyan);
        color: var(--accent-cyan);
    }

    .command-desc {
        color: var(--text-secondary);
        padding: 15px;
        margin: 0;
        font-size: 0.95rem;
    }

    .command-options {
        padding: 12px 15px;
        border-top: 1px solid var(--border-dim);
        color: var(--text-secondary);
        font-size: 0.9rem;
        display: flex;
        gap: 10px;
        align-items: flex-start;
    }

    .options-label {
        color: var(--text-purple);
        font-size: 0.75rem;
        font-family: var(--font-mono);
    }

    .command-example {
        padding: 12px 15px;
        border-top: 1px solid var(--border-dim);
        color: var(--text-secondary);
        font-size: 0.9rem;
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .example-label {
        color: var(--accent-cyan);
        font-size: 0.75rem;
        font-family: var(--font-mono);
    }

    .command-note {
        padding: 12px 15px;
        margin: 0;
        border-top: 1px solid var(--border-dim);
        color: var(--text-secondary);
        font-size: 0.9rem;
        font-style: italic;
    }

    @media (max-width: 600px) {
        .command-header {
            padding: 10px 12px;
            gap: 8px;
        }

        .command-name {
            font-size: 0.9rem;
        }

        .command-header .copy-btn {
            padding: 6px 10px;
            min-height: 32px;
        }

        .command-desc,
        .command-options,
        .command-example,
        .command-note {
            padding: 10px 12px;
            font-size: 0.85rem;
        }

        .command-example code {
            word-break: break-all;
        }
    }
</style>
