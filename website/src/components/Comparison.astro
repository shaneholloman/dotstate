---
interface Props {
    leftTitle: string;
    rightTitle: string;
}

const { leftTitle, rightTitle } = Astro.props;
---

<div class="comparison">
    <div class="comparison-item">
        <h4>{leftTitle}</h4>
        <slot name="left" />
    </div>
    <div class="comparison-item">
        <h4>{rightTitle}</h4>
        <slot name="right" />
    </div>
</div>

<style>
    .comparison {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin: 25px 0;
    }

    .comparison-item {
        padding: 20px;
        background-color: rgba(0, 212, 255, 0.05);
        border: 1px solid var(--border-color);
    }

    .comparison-item h4 {
        color: var(--accent-cyan);
        margin-bottom: 15px;
    }

    .comparison-item :global(ul) {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .comparison-item :global(li) {
        margin-bottom: 8px;
        padding-left: 5px;
        color: var(--text-secondary);
    }

    @media (max-width: 968px) {
        .comparison {
            grid-template-columns: 1fr;
        }
    }
</style>
