---
interface Props {
    leftTitle: string;
    rightTitle: string;
}

const { leftTitle, rightTitle } = Astro.props;
---

<div class="comparison">
    <div class="comparison-item left">
        <div class="comparison-header">
            <span class="comparison-icon">[-]</span>
            <h4>{leftTitle}</h4>
        </div>
        <div class="comparison-content">
            <slot name="left" />
        </div>
    </div>
    <div class="comparison-vs">VS</div>
    <div class="comparison-item right">
        <div class="comparison-header">
            <span class="comparison-icon">[+]</span>
            <h4>{rightTitle}</h4>
        </div>
        <div class="comparison-content">
            <slot name="right" />
        </div>
    </div>
</div>

<style>
    .comparison {
        display: grid;
        grid-template-columns: 1fr 50px 1fr;
        gap: 10px;
        margin: 25px 0;
        align-items: stretch;
    }

    .comparison-vs {
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-secondary);
        font-size: 0.8rem;
        font-weight: bold;
    }

    .comparison-item {
        background-color: var(--bg-secondary);
        border: 1px solid var(--border-dim);
    }

    .comparison-item.left {
        border-left: 3px solid var(--text-red);
    }

    .comparison-item.right {
        border-left: 3px solid var(--accent-green);
    }

    .comparison-header {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px 15px;
        background: linear-gradient(180deg, var(--bg-tertiary) 0%, var(--bg-secondary) 100%);
        border-bottom: 1px solid var(--border-dim);
    }

    .comparison-icon {
        font-family: var(--font-mono);
        font-size: 0.85rem;
        font-weight: bold;
    }

    .comparison-item.left .comparison-icon {
        color: var(--text-red);
    }

    .comparison-item.right .comparison-icon {
        color: var(--accent-green);
    }

    .comparison-header h4 {
        color: var(--text-primary);
        margin: 0;
        font-size: 0.95rem;
        font-weight: 600;
    }

    .comparison-content {
        padding: 15px;
    }

    .comparison-item :global(ul) {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .comparison-item :global(li) {
        margin-bottom: 8px;
        padding-left: 0;
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    .comparison-item :global(ul > li::before) {
        content: '├─ ';
        color: var(--border-dim);
    }

    .comparison-item :global(ul > li:last-child::before) {
        content: '└─ ';
    }

    @media (max-width: 700px) {
        .comparison {
            grid-template-columns: 1fr;
            gap: 15px;
        }

        .comparison-vs {
            padding: 5px 0;
        }
    }
</style>
