---
interface Props {
    title: string;
}

const { title } = Astro.props;

// Extract icon if present in title (e.g., "[#] Documentation")
const hasIcon = title.startsWith('[');
const icon = hasIcon ? title.substring(0, 3) : '[*]';
const titleText = hasIcon ? title.substring(4) : title;
---

<div class="contrib-card">
    <div class="contrib-header">
        <span class="contrib-icon">{icon}</span>
        <h4>{titleText}</h4>
    </div>
    <p><slot /></p>
</div>

<style>
    .contrib-card {
        background-color: var(--bg-secondary);
        border: 1px solid var(--border-dim);
        transition: all 0.15s ease;
    }

    .contrib-card:hover {
        border-color: var(--accent-cyan);
    }

    .contrib-header {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 10px 12px;
        background: linear-gradient(180deg, var(--bg-tertiary) 0%, var(--bg-secondary) 100%);
        border-bottom: 1px solid var(--border-dim);
    }

    .contrib-icon {
        color: var(--accent-cyan);
        font-size: 0.8rem;
        font-family: var(--font-mono);
    }

    .contrib-header h4 {
        color: var(--text-primary);
        margin: 0;
        font-size: 0.9rem;
        font-weight: 600;
    }

    .contrib-card p {
        font-size: 0.85rem;
        margin: 0;
        padding: 12px;
        color: var(--text-secondary);
        line-height: 1.5;
    }
</style>
