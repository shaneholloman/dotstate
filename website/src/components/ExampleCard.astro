---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<div class="example-card">
    <div class="example-header">
        <span class="example-icon">[#]</span>
        <h4>{title}</h4>
    </div>
    <div class="example-content">
        <slot />
    </div>
</div>

<style>
    .example-card {
        background-color: var(--bg-secondary);
        border: 1px solid var(--border-dim);
        margin: 20px 0;
    }

    .example-header {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px 15px;
        background: linear-gradient(180deg, var(--bg-tertiary) 0%, var(--bg-secondary) 100%);
        border-bottom: 1px solid var(--border-dim);
    }

    .example-icon {
        color: var(--accent-cyan);
        font-size: 0.85rem;
        font-family: var(--font-mono);
    }

    .example-header h4 {
        color: var(--text-primary);
        margin: 0;
        font-size: 0.95rem;
        font-weight: 600;
    }

    .example-content {
        padding: 15px;
    }

    .example-card :global(ol),
    .example-card :global(ul) {
        margin-left: 5px;
        color: var(--text-secondary);
        list-style: none;
    }

    .example-card :global(ol) {
        counter-reset: item;
    }

    .example-card :global(ol > li) {
        counter-increment: item;
    }

    .example-card :global(ol > li::before) {
        content: '[' counter(item) '] ';
        color: var(--accent-cyan);
    }

    .example-card :global(ul > li::before) {
        content: '├─ ';
        color: var(--border-dim);
    }

    .example-card :global(ul > li:last-child::before) {
        content: '└─ ';
    }

    .example-card :global(p) {
        color: var(--text-secondary);
        margin-bottom: 10px;
    }

    .example-card :global(code) {
        display: inline-block;
        margin: 5px 0;
    }
</style>
