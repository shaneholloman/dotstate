---
interface Props {
    icon: string;
    title: string;
}

const { icon, title } = Astro.props;
---

<div class="feature-card">
    <div class="feature-icon" aria-hidden="true">{icon}</div>
    <h4>{title}</h4>
    <p><slot /></p>
</div>

<style>
    .feature-card {
        padding: 20px;
        background-color: rgba(0, 212, 255, 0.05);
        border: 1px solid var(--border-color);
        text-align: center;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 20px rgba(0, 212, 255, 0.3);
    }

    .feature-icon {
        font-size: 2.5rem;
        margin-bottom: 15px;
    }

    .feature-card h4 {
        color: var(--text-green);
        margin-bottom: 10px;
        font-size: 1.2rem;
    }

    .feature-card p {
        color: var(--text-secondary);
        font-size: 0.95rem;
        margin: 0;
    }
</style>
