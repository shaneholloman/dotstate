---
interface Props {
    title: string;
}

const { title } = Astro.props;

// Extract icon if present in title (e.g., "[!] No Shell Injection")
const hasIcon = title.startsWith('[');
const icon = hasIcon ? title.substring(0, 3) : '[+]';
const titleText = hasIcon ? title.substring(4) : title;
---

<div class="security-card">
    <div class="security-header">
        <span class="security-icon">{icon}</span>
        <h4>{titleText}</h4>
    </div>
    <div class="security-content">
        <slot />
    </div>
</div>

<style>
    .security-card {
        background-color: var(--bg-secondary);
        border: 1px solid var(--border-dim);
        margin: 15px 0;
    }

    .security-header {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px 15px;
        background: linear-gradient(180deg, var(--bg-tertiary) 0%, var(--bg-secondary) 100%);
        border-bottom: 1px solid var(--border-dim);
    }

    .security-icon {
        color: var(--accent-green);
        font-size: 0.85rem;
        font-family: var(--font-mono);
        font-weight: bold;
    }

    .security-header h4 {
        color: var(--text-primary);
        margin: 0;
        font-size: 0.95rem;
        font-weight: 600;
    }

    .security-content {
        padding: 15px;
    }

    .security-card :global(p) {
        color: var(--text-secondary);
        margin: 0;
        font-size: 0.95rem;
        line-height: 1.6;
    }
</style>
