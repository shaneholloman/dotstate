---
interface Props {
    number: number;
    title: string;
}

const { number, title } = Astro.props;
---

<div class="step">
    <div class="step-number">{number}</div>
    <div class="step-content">
        <h3>{title}</h3>
        <slot />
    </div>
</div>

<style>
    .step {
        display: flex;
        gap: 20px;
        margin: 25px 0;
        padding: 20px;
        background-color: rgba(0, 212, 255, 0.05);
        border-left: 3px solid var(--border-color);
    }

    .step-number {
        flex-shrink: 0;
        width: 40px;
        height: 40px;
        background-color: var(--accent-cyan);
        color: var(--bg-primary);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 1.2rem;
    }

    .step-content h3 {
        margin-top: 0;
        margin-bottom: 10px;
        color: var(--text-green);
    }

    .step-content :global(ul) {
        margin-top: 10px;
        color: var(--text-secondary);
    }

    .step-content :global(p) {
        color: var(--text-secondary);
    }

    @media (max-width: 600px) {
        .step {
            flex-direction: column;
            align-items: center;
            text-align: center;
        }
    }
</style>
