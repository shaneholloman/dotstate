---
interface Props {
    number: number;
    title: string;
}

const { number, title } = Astro.props;
---

<div class="step">
    <div class="step-header">
        <span class="step-number">[{number}]</span>
        <h3>{title}</h3>
    </div>
    <div class="step-content">
        <slot />
    </div>
</div>

<style>
    .step {
        margin: 20px 0;
        background-color: var(--bg-secondary);
        border: 1px solid var(--border-dim);
    }

    .step-header {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 15px;
        background: linear-gradient(180deg, var(--bg-tertiary) 0%, var(--bg-secondary) 100%);
        border-bottom: 1px solid var(--border-dim);
    }

    .step-number {
        color: var(--accent-cyan);
        font-family: var(--font-mono);
        font-size: 0.9rem;
        font-weight: bold;
    }

    .step-header h3 {
        margin: 0;
        color: var(--text-primary);
        font-size: 1rem;
        font-weight: 600;
    }

    .step-content {
        padding: 15px;
    }

    .step-content :global(ul) {
        margin-top: 10px;
        margin-left: 5px;
        color: var(--text-secondary);
        list-style: none;
    }

    .step-content :global(ul > li::before) {
        content: '├─ ';
        color: var(--border-dim);
    }

    .step-content :global(ul > li:last-child::before) {
        content: '└─ ';
    }

    .step-content :global(p) {
        color: var(--text-secondary);
        margin: 0 0 10px 0;
    }

    @media (max-width: 600px) {
        .step-header {
            flex-direction: row;
        }
    }
</style>
