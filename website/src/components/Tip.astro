---
interface Props {
    type?: 'info' | 'success' | 'warning';
    icon?: string;
}

const { type = 'info', icon } = Astro.props;

const icons = {
    info: '[i]',
    success: '[+]',
    warning: '[!]'
};

const displayIcon = icon || icons[type];
---

<div class={`tip ${type}`}>
    <span class="tip-icon" aria-hidden="true">{displayIcon}</span>
    <div class="tip-content">
        <slot />
    </div>
</div>

<style>
    .tip {
        background-color: var(--bg-secondary);
        border: 1px solid var(--border-dim);
        border-left: 3px solid var(--text-purple);
        padding: 15px;
        margin: 20px 0;
        display: flex;
        gap: 12px;
        align-items: flex-start;
    }

    .tip.success {
        border-left-color: var(--accent-green);
    }

    .tip.warning {
        border-left-color: var(--text-yellow);
    }

    .tip-icon {
        font-size: 0.85rem;
        flex-shrink: 0;
        font-family: var(--font-mono);
        color: var(--text-purple);
        font-weight: bold;
    }

    .tip.success .tip-icon {
        color: var(--accent-green);
    }

    .tip.warning .tip-icon {
        color: var(--text-yellow);
    }

    .tip-content {
        color: var(--text-secondary);
        font-size: 0.95rem;
        line-height: 1.6;
    }

    .tip-content :global(strong) {
        color: var(--text-purple);
    }

    .tip.success .tip-content :global(strong) {
        color: var(--accent-green);
    }

    .tip.warning .tip-content :global(strong) {
        color: var(--text-yellow);
    }
</style>
